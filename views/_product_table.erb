<table class='product-table'>
  <tr>
    <th>Product Name</th>
    <th>Category</th>
    <th>Price</th>
    <th>Stock</th>
  </tr>
  <% products.each do |product| %>
    <tr class='product'>
      <%= erb :_product, :layout => false, :locals => { :product => product } %>
    </tr>
  <% end %>
</table>
